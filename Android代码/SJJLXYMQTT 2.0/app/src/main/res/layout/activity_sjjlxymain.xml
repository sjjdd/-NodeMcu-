<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="company.sunjunjie.come.sjjlxymqtt.SJJLXYMainActivity"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

    <LinearLayout
       android:id="@+id/Humidity_Temperature"
       android:layout_marginTop="100dp"
       android:layout_width="150dp"
       android:layout_height="120dp"
       android:orientation="vertical"
        android:background="@drawable/shape_main_list_bg"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp">
           <ImageView
               android:layout_marginLeft="10dp"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/temperature"/>
           <TextView
               android:id="@+id/temp"
               android:layout_width="100dp"
               android:layout_height="25dp"
               android:text="温度："
               />
       </LinearLayout>
     <LinearLayout
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <ImageView
             android:layout_marginLeft="10dp"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:src="@drawable/humidity"/>
         <TextView
             android:id="@+id/humidity"
             android:layout_width="100dp"
             android:layout_height="25dp"
             android:text="湿度："/>
     </LinearLayout>

   </LinearLayout>
    <LinearLayout
        android:id="@+id/dust"
        android:layout_marginTop="100dp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/Humidity_Temperature"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_main_list_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/pm"/>
            <TextView
                android:id="@+id/PM"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="PM2.5值："
                />
        </LinearLayout>


        <TextView
            android:id="@+id/air"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="空气质量："
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mq"
        android:layout_below="@+id/Humidity_Temperature"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:background="@drawable/shape_main_list_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mq"/>
            <TextView
                android:id="@+id/yanwu"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="MQ烟雾值："
                />
        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/setlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center" >
            <TextView
                android:id="@+id/d_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/on"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:text="取暖器"
                android:textColor="#000000"
                />
            <!--使用SlipButton的方法这里必须是类的包名加.类名  -->
            <company.sunjunjie.come.sjjlxymqtt.moder.SlipButton
                android:id="@+id/on"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="8dip"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/showChart"
            android:layout_below="@+id/mq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/PM25Chart"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="PM2.5值随时间变化图"
                android:background="@drawable/noclick"/>
            <TextView
                android:id="@+id/MQChart"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="MQ烟雾值随时间变化图"
                android:background="@drawable/noclick"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/painting"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/showChart"
            android:layout_width="match_parent"
            android:layout_height="220dp"></FrameLayout>
    </RelativeLayout>
<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/nav_menu"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
